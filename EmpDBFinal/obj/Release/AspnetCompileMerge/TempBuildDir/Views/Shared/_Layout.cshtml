<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Database</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/scripts/jquery-3.1.0.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("Employee Database", "Index", "Account", new { area = "" }, new { @class = "navbar-brand" })

                <div class="top_right_user">
                    @if (Request.IsAuthenticated)
                    {
                        <strong>Logged in as: @Html.Encode(User.Identity.Name)</strong>

                        <button class="btn btn-danger" type="button" onclick="location.href='@Url.Action("Logout", "Account")'"><span class="glyphicon glyphicon-off gl_btn"></span>Logout</button>

                    }
                    else
                    {

                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("Login", "Account")'"><span class="glyphicon glyphicon-share-alt gl_btn"></span>Login</button>

                    }
                </div>

            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()

        @if (Request.IsAuthenticated)
        {


            @*<input class="btn-lg btn-default" type="button" value="Back to Employee List" onclick="location.href='@Url.Action("Logout", "Account")'" />*@
        }
        <footer>
            <p>&copy; @DateTime.Now.Year - Employee Database</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>