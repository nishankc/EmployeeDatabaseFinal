            <button class="btn-lg btn-default text-center col-md-8" type="submit">Create a new Employee</button>
        }

        <br />
        <br />
        <br />
        <br />

        @if (Request.IsAuthenticated)
        {

            using (Html.BeginForm("Logout", "Account"))
